<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create_table_image" author="rslan">
        <createTable tableName="image">

            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="entity_id" type="bigint" >
                <constraints nullable="false"/>
            </column>

            <column name="entity_type" type="varchar(64)">
                <constraints nullable="false" />
            </column>

            <column name="size" type="varchar(64)">
                <constraints nullable="false" />
            </column>

            <column name="path" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="base_name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>

            <column name="extension" type="varchar(64)">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>

</databaseChangeLog>